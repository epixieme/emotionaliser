      >
        <img
          class="object-cover shadow-sm shadow-slate-900"
          src="/images/moods.jpg"
          alt="Sunset in the mountains"
          style="width: 100%; height: 400px"
        />
        <section class="text-white">

          <%# for(let i=0; i<thoughts.length; i++) {%>
            <%console.log('this date ' + new Date(thoughtDate.date).toLocaleDateString('en-GB') + new Date().toLocaleDateString('en-GB') )%>
