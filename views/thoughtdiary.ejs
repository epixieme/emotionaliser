<section
  class="bg-grey-900 bg-backg-wave bg-no-repeat bg-cover pt-28 min-h-screen md:pb-56"
>
  <h1
    class="px-16 py-4 text-neutral-300 font-bold  text-4xl flex justify-center"
  >
    <%= users.userName%>
  </h1>
  <h1
    class="px-16 py-4 font-bold text-black text-xl flex justify-center"
  >
    Thought Diary
  </h1>

  
  <section class="flex flex-col  ">


      
    <section class="flex align-middle justify-center h-screen ">
      <!-- image could be a github heatmap for each thought map entry -->
      <section
        class="hover:scale-105 transition delay-150 duration-300 ease-in-out max-w-sm overflow-hidden shadow-lg h-full w-full hover:bg-black  bg-gray-400 rounded-md bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-20 border border-gray-500 "
      >
        <img
          class="object-cover shadow-sm shadow-slate-900"
          src="/images/moods.jpg"
          alt="Sunset in the mountains"
          style="width: 100%; height: 200px"
        />
        <section class="text-black hover:text-white">

          <%# for(let i=0; i<thoughts.length; i++) {%>
           
            <% if(thoughtDate != null && new Date(thoughtDate.date).toLocaleDateString('en-GB') === new Date().toLocaleDateString('en-GB')){ %>
               
              <h1 class="text-center p-4 text-lg ">Todays thought has already been submitted <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
              </svg>
               </h1>
              
              <% } else { %>
                <a href="/dashboard/tools/thoughtdiary/submit-thought">
                <h1 class="text-center p-4 text-lg">Add Todays Thought</h1>
              </a>
              <% } %>
        
          <%#}%>
        </section>
      </section>
   
    </section>


    <section class="px-16 pt-4">

      <% for(let i=0; i<thoughtsPerPage.length; i++) {%>
        <section class="hover:scale-105 transition delay-150 duration-300 ease-in-out  even:bg-orange-50 odd:bg-orange-100 mt-5 shadow-md rounded-lg p-3 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-6 lg:grid-cols-6 xl:grid-cols-6 place-items-center text-black text-lg ">
        <p class=""><%=thoughtsPerPage[i].date.toLocaleDateString('en-GB')%></p>
        <a href="/dashboard/tools/thoughtdiary/<%=thoughtsPerPage[i].id%>" style="width:70%;height:70px"><img class="object-cover rounded-md shadow-md shadow-slate-700" src="<%=thoughts[i].image%>" alt="" style="width:70%;height:70px"></a>
        <p class=""><a href="/dashboard/tools/thoughtDiary/categories"><%=thoughtsPerPage[i].category%></a></p>
        <p class=""><%=thoughtsPerPage[i].summary%></p>
        <p class="rating"><%=thoughtsPerPage[i].rating%></p>
        <p class=""><a href="/dashboard/tools/thoughtdiary/<%=thoughtsPerPage[i].id%>"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 hover:fill-teal-700 transform transition duration-500 hover:scale-110">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m5.231 13.481L15 17.25m-4.5-15H5.625c-.621 0-1.125.504-1.125 1.125v16.5c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9zm3.75 11.625a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
        </svg>
        </a></p>
       
    
        </section>
        <%}%>
    
    </section>
  </section>

</section>
