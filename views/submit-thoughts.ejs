<section class="bg-grey-900 bg-backg-wave bg-no-repeat bg-cover pt-28 min-h-screen md:pb-56">
<section class="flex justify-center">

<section class="w-full max-w-xl">
  
    <form action="/dashboard/tools/thoughtdiary/submit-thought" enctype="multipart/form-data" method="post" class="font-poppins bg-gradient-to-r from-teal-700 to-pink-500 shadow-md rounded px-8 pt-6 pb-8 mb-4 text-white">
      <section class="mb-6">
        <label class="block text-2xl text-white font-bold mb-2" for="password">

        </label>
        <section>
          <input class="slidetext p-2 text-xl bg-transparent border-none outline-none" name="category" type="text" value="Awful" readonly/>
        </section>
        <section>
          <input class="moodrating p-2 text-2xl bg-transparent border-none outline-none" name="rating" type="text" value="1" readonly hidden/>
        </section>
        <div class="slidecontainer">
          <input type="range" min="1" max="6" value="1" step=".1" class="pt-3 slider w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer dark:bg-gray-700" id="myRange"  id="category"/>
        </div>
      </section>
      <section class="mb-4">
        <label class="block text-white text-sm font-bold mb-2 text-1xl" for="summary">
        Summarise how you feel?
        </label>
        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="summary" type="text" placeholder="" name="summary">
      </section>
      <section class="mb-6">
        <label class="block text-white text-sm font-bold mb-2" for="details">
        Tell me more about how you feel?
        </label>
        <textarea class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="details" type="details" placeholder="details" name="details"></textarea>
      </section>
      <div class="mb-3">
        <label for="imgUpload" class="form-label">Add an image that best describes your current mood:</label>
        <input type="file" class="form-control" id="imageUpload" name="file">
      </div>
      <section class="flex items-center justify-between">
        <!-- if date is same date as already submitted and default is true then disable button -->
        <button class="bg-white hover:bg-slate-300 border border-2  shadow-slate-700 shadow-sm text-zinc-900 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
         Done
        </button>
        <%console.log(thoughts)%>
      </section>
    </form>
    <p class="text-center text-gray-500 text-xs">
      &copy;2020 Acme Corp. All rights reserved.
    </p>
  </section>
</section>
</section>