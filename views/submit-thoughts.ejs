<section class="bg-grey-900 bg-backg-wave bg-no-repeat bg-cover pt-28 min-h-screen md:pb-56">
<section class="flex justify-center">

<section class="w-full max-w-xl p-4">
  
    <form action="/dashboard/tools/thoughtdiary/1/submit-thought" enctype="multipart/form-data" method="post" class="font-poppins   px-8 pt-6 pb-8 mb-4 bg-black rounded-md bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-20 shadow-md text-white">
      <section class="mb-6">
        <label class="block text-2xl text-white font-bold mb-2" for="password">

        </label>
        <section>
          <input class="slidetext p-2 text-base bg-transparent border-none outline-none" name="category" type="text" value="Awful" readonly/>
        </section>
        <section>
          <input class="moodrating p-2 text-2xl bg-transparent border-none outline-none" name="rating" type="text" value="1" readonly hidden/>
        </section>
        <div class="gdas-menu-left">
          <input type="range" min="1" max="6" value="1" step=".1" class="gdas-range w-full h-2 bg-gray-200  " id="myRange"  id="category"/>
        </div>
      </section>
      <section class="mb-4">
        <label class="block text-white  mb-2 text-base" for="summary">
        Summarise how you feel?
        </label>
        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="summary" type="text" placeholder="Summary"  aria-placeholder="Summary" name="summary">
      </section>
      <section class="mb-6">
        <label class="block text-white  text-base mb-2" for="details">
        Tell me more about how you feel?
        </label>
        <textarea class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="details" type="details" placeholder="Details" name="details"></textarea>
      </section>
      <div class="mb-3 text-base">
        <section class="tooltip">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 ">
          <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z" />
        </svg>
        <!-- <p class="text-xs flex items-center my-2">
         
      </p> -->
      <span class="tooltiptext">  Upload an image that best describes your current mood</span>
        </section>
        <label for="imgUpload" class="form-label flex">
        </label>
        <input type="file" class="form-control" id="imageUpload" name="file">
      </div>


      <section class="flex items-center justify-between pt-4">
        <!-- if date is same date as already submitted and default is true then disable button -->
        <button class="bg-transparent hover:scale-105 hover:text-black hover:border-teal-700 transition delay-150 duration-1000 ease-in-out text-light text-white border border-white rounded-lg py-2 px-4 focus:outline-none focus:shadow-outline text-base" type="submit">
         Done
        </button>
        <%console.log(thoughts)%>
      </section>
    </form>
    <p class="text-center text-gray-500 text-xs">
      &copy;2020 Acme Corp. All rights reserved.
    </p>
  </section>
</section>
</section>