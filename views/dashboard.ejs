 <section class=" flex sm:flex-col  max-w-5xl mb-20 h-full w-full bg-gray-400 rounded-md bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-20 border border-gray-500">

    <!-- thoughts over last 7 days timeline -->
<ul
class="WeeklyDates p-10 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-7 lg:grid-cols-7 xl:grid-cols-7 gap-4  text-white text-center max-w-5xl"
>
<% for(let i=0; i< helper.past7Days.length; i++) {%>
  <li class ='weeklyDate'><%= helper.past7Days[i] %></li>

  <%}%>
</ul>

<section class="mongoDates p-10 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-7 lg:grid-cols-7 xl:grid-cols-7 gap-4 text-center max-w-5xl">
<!-- loop over the length of the mongo data and shorten the date to dd,yy and push ddate to array-->
<% let shortenDate=[] %>
 <% for(let i=0; i<thoughts.length; i++) {%>
  <% let thoughtMonth = new Date(thoughts[i].date).getMonth() + 1 %>
  <% let thoughtDay = new Date(thoughts[i].date).getDate()%>
  <%const thoughtDetails =`${thoughtDay}/${thoughtMonth}`%>
  <%shortenDate.push(thoughtDetails)%>
   <% } %>
  <!-- map the last 7 days array and if mongoDates array includes the item from last 7 days array then display the date else 0 which means no entry was submitted -->
  <% const finalArray = helper.past7Days.map(item=>shortenDate.includes(item)?item:0)%>
 
     <% for(let i=0; i<finalArray.length; i++) {%>   

      <% if(finalArray[i]!==0){ %>
      <section class="rounded overflow-hidden shadow-lg border border-gray-700 h-52"> 

          <section class=" h-2 date">
            <a class="thoughtRoute" href="/dashboard/tools/thoughtdiary<%thoughts.id%>">
            <img src="" alt="" class="object-cover" style="width:100%;height:150px">
            <p class="dateFields text-white text-opacity-0"><%= finalArray[i]%></p>
          </a>
    
          <!-- links to all items by same category -->
     
          <p class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2 category"></p>
    
        </section>
      </section>
        <% } else { %>
          <section class="rounded overflow-hidden h-52 border border-gray-700 date"> 
          <!-- <p class="inline-block bg-gray-200  px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2 category">Oops! Not Submitted</p> -->
    
   </section>
        <% } %>
  <% } %>

      </section>
