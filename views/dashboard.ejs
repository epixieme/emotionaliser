  <div class="max-w-sm w-full lg:max-w-3xl lg:flex">
    <div class="lg:h-auto lg:w-48 flex-none bg-cover rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden" style="background-image: url('<%=motivations.image%>')" title="">
    </div>
    <div class=" h-72 border-r border-b border-l border-black lg:border-l-0 lg:border-t lg:border-black bg-black rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-20">
      <div class="mb-8">
      
        <div class="text-neutral-200 font-bold text-xl mb-2"><%=motivations.title%></div>
        <p class="text-neutral-400  text-base"><%=motivations.poem%></p>
      </div>
      <div class="flex items-center">
        
        <div class="text-sm">
          <p class="text-neutral-200  leading-none"><%=motivations.author%></p>
      
        </div>
      </div>
    </div>
  </div>

