<section
  class="bg-grey-900 bg-backg-wave bg-no-repeat bg-cover pt-28 min-h-screen md:pb-56"
>
  <section class="flex justify-center">
    <section class="w-full max-w-5xl">
      <section
        class="border border-white rounded-lg shadow-md px-8 pt-6 pb-8 mb-4 text-white"
      >
        <section class="mb-6">
          <img class="max-w-screen-sm" src="<%=thought.image %>" />
          <h1 class="block text-4xl text-white font-bold mb-2">Mood</h1>
          <h1><%=thought.category %></h1>
          <h1 class="block text-4xl text-white font-bold mb-2">Summary</h1>
          <h1><%=thought.summary %></h1>

          <h1 class="block text-4xl text-white font-bold mb-2">Details</h1>
          <h1><%=thought.details %></h1>
        </section>
        <p class="edit">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-6 h-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"
            />
          </svg>
        </p>

        <% console.log(thought.user, user)%>

          <%if(thought.user == user.id){ %>
     
        <form action="/tools/thoughtdiary/delete-thought/<%=thought.id%>?_method=DELETE" method="POST">
        <button class="del" type="submit">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-6 h-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"
            />
          </svg>
        </button>
        <%}%>
      </form>
      </section>
      <p class="text-center text-gray-500 text-xs">
        &copy;2020 Acme Corp. All rights reserved.
      </p>
    </section>
  </section>
</section>
