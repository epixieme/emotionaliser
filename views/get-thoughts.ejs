<section
  class="flex justify-center bg-grey-900 bg-backg-wave bg-no-repeat bg-cover pt-28 min-h-screen md:pb-56 font-poppins"
>
<section class="text-black hover:scale-105 transition delay-150 duration-300 ease-in-out max-w-md  overflow-hidden shadow-lg h-full w-full bg-gray-400 rounded-md bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-20 max-h-full">
 
  <img class="border object-cover rounded-md" src="<%=thought.image %>"  style="width:100%;height:350px" />
  <section class="px-8 py-4">
    <h1 class="block text-2xl  font-bold py-2">Mood</h1>
    <h1 class="text-base font-light"><%=thought.category %></h1>
    <h1 class="block text-2xl  font-bold py-2">Summary</h1>
    <h1 class="text-base font-light"><%=thought.summary %></h1>
    <h1 class="block text-2xl font-bold py-2">Details</h1>
    <h1 class="text-base font-light"><%=thought.details %></h1>
  </section>
  <section class="flex px-8 pt-4 pb-2 space-x-16">
    <p class="edit hover:scale-105 transition delay-150 duration-300 ease-in-out"><a href="/dashboard/tools/thoughtdiary/0/edit-thought/<%=thought.id%>">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6 text-neutral-500 hover:text-teal-700"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"
        />
      </svg>
    </a>
    </p>

    <% console.log(thought.user, user)%>

      <%if(thought.user == user.id){ %>
 
    <form action="/dashboard/tools/thoughtdiary/delete-thought/<%=thought.id%>?_method=DELETE" method="POST">
    <button class="del hover:scale-105 transition delay-150 duration-300 ease-in-out" type="submit">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6  text-neutral-500 hover:text-teal-700"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"
        />
      </svg>
    </button>
    <%}%>
  </form>

  <%if(thought.bookmarked === false){ %>
  <form action="/dashboard/bookmarks/thought/bookmarked/<%=thought.id%>?_method=PUT" method="POST">
    <button type='submit' class="bookmark hover:scale-105 transition delay-150 duration-300 ease-in-out">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-neutral-500 hover:text-teal-700">
      <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
    </svg>
    
    </button>
    </form>
 
    <% } else { %>
      <form action="/dashboard/bookmarks/thought/notBookmarked/<%=thought.id%>?_method=PUT" method="POST">
        <button type='submit' class="bookmark hover:scale-105 transition delay-150 duration-300 ease-in-out">
          <svg xmlns="http://www.w3.org/2000/svg" fill="teal-700" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-teal-700 hover:text-neutral-500">
          <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
        </svg>
        
        </button>
        </form>
      <% } %>


  </section>
  <section
  class="flex  text-white p-4  rounded-md  bg-black bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-40 shadow-md"
  >
  <p class="text-black font-bold"><%=bookmarkedMsg%></p>
  
  </section>
</section>


</section>


