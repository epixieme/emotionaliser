           <a href="/dashboard/tools/motivations/<%=motivations[i].id%>" style="width:100%;height:150px">
              <img src="<%=motivations[i].image%>" class="object-cover rounded-md" style="width:100%;height:150px">
           </a>
           <section class="p-4">
           <p class="text-black"><%=motivations[i].poem%></p>
           <p class="text-neutral-600"><%=motivations[i].author%></p>

       </section>
     </section>

     <% }%>
    <% } %>
   </section>

