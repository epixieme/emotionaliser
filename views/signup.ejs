
<section class="bg-grey-900 bg-backg-wave bg-no-repeat bg-cover pt-10 min-h-screen md:pb-56">



<section class="flex flex-col items-center align-text-top justify-center w-full px-4 ">
  <% if (locals.messages.errors) { %>
    <section class="flex justify-center">
    <section class="bg-white bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-40 shadow-md rounded-md p-4 text-black font-semibold mb-4 md:max-h-52 ">
    <% messages.errors.forEach( el => { %>
        <section class="alert alert-danger"><%= el.msg %></section>
    <% }) %>  
  </section>  
</section>
<% } %>
    <section class="w-full max-w-md">
      <form action="/signup" method="POST" class="shadow-md  px-8 pt-6 pb-8 mb-4 h-full w-full bg-gray-400 rounded-md bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-20  border-white border-dashed border-4" >
        <section class="mb-4">
          <label class="block text-black text-sm font-bold mb-2" for="username">
            Username
          </label>
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="username" type="text" placeholder="Username" name="userName">
        </section>
        <section class="mb-4">
          <label class="block text-black text-sm font-bold mb-2" for="email">
            Email
          </label>
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="email" type="email" placeholder="email" name="email">
        </section>
        <section class="mb-6">
          <label class="block text-black text-sm font-bold mb-2" for="password">
            Password
          </label>
          <input class="shadow appearance-none  rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="password" type="password" placeholder="******************" name="password">
       
        </section>
        <section class="mb-6">
          <label class="block text-black text-sm font-bold mb-2" for="password">
            Confirm Password
          </label>
          <input class="shadow appearance-none border  rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="confirmPassword" type="password" placeholder="******************" name="confirmPassword">
       
        </section>
        <section class="flex items-center justify-between">
          <section class="hover:scale-105 transition duration-300 transform">
          <button class="bg-teal-700 hover:bg-teal-900 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
            Sign Up
          </button>
        </section>
          <!-- <a class="inline-block align-baseline font-bold text-sm text-teal-700 hover:text-teal-900" href="#">
            Forgot Password?
          </a> -->
        </section>
      </form>
      <p class="text-center text-black text-xs ">
        Already have an account?
        <a class="font-bold text-teal-700" href="/login">Log In</a> 
      </p>
    </section>
</section>

